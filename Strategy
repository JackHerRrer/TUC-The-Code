include("GlobalVar");
include("Utilitaires");
include("FonctionEtat");

function leekStrategyChoice(){

	
	if (getTurn() == 1){
		first_turn_strategy();
	}

	else if (getTurn() > 1 && getTurn() < 5){
		running_away_strategy();
	}
	
	else if (getTurn() >= 4){
		fight_strategy();
	}
	//complete_strategy();

	debug("******************************");
	for (var i = 0; i < actionTotal; i++){
		debug(actionSequence[i]);
	}
	debug("TP total : "+ TPTotal);
	debug("******************************\n");
}

function punnyBulbStrategyChoice(){

	if (getTurn() < 2 || getTurn() > 5){
		actionSequence[actionTotal] = MOVE_TOWARD_ENEMY; 
		actionTotal++;
	}

	actionSequence[actionTotal] = USE_HELMET; 
	actionTotal++;

	actionSequence[actionTotal] = USE_PEBBLE; 
	actionTotal++;

	actionSequence[actionTotal] = USE_BANDAGE; 
	actionTotal++;

	actionSequence[actionTotal] = USE_PROTEIN; 
	actionTotal++;

}

