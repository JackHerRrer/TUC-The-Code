function first_turn_strategy(){


	actionSequence[actionTotal] = []; 	
	actionSequence[actionTotal][0] =  EQUIP_WEAPON;
	actionSequence[actionTotal][1] =  WEAPON_GRENADE_LAUNCHER; 
	//actionSequence[actionTotal][1] =  WEAPON_KATANA; 
	//actionSequence[actionTotal][1] =  WEAPON_PISTOL; 
	actionTotal++;

	//actionSequence[actionTotal] = []; 	
	//actionSequence[actionTotal][0] =  USE_OBJECT;
	//actionSequence[actionTotal][1] =  CHIP_ARMORING; 
	//actionSequence[actionTotal][2] =  getCell();
	//actionTotal++;
	
	actionSequence[actionTotal] = []; 	
	actionSequence[actionTotal][0] = SUMMON_LIGHTNING_BULB; 	// 6 TP	+ 1 MP
	actionTotal++;

	//actionSequence[actionTotal][0] = MOVE_AWAY_FROM_ENEMY; 		// 0-3 MP
	//actionTotal++;

}

function second_turn_strategy(){

	actionSequence[actionTotal] = []; 	
	actionSequence[actionTotal][0] = SUMMON_FIRE_BULB; 	// 6 TP	+ 1 MP
	actionTotal++;
}

function fight_strategy(){

// TO BE IMPROVED : discard the skills that cannot be casted at the very begining. The less skill, the less operation later on.
// - Remove antidote if no poison on leek
// 
//
//    ID: 7, CHIP_ROCK, cost: 5
//    ID: 20, CHIP_SHIELD, cost: 4
//    ID: 21, CHIP_HELMET, cost: 3                    [3, 4, 5]                                         [[5, 5], [5, 4], [5, 3], [4, 4], [4, 3, 3], [3, 3, 3]]
//    ID: 37, WEAPON_PISTOL, cost: 3
//                       +------------------------+   skillsCostList     +--------------------------+                       +-------------------------+
//             +--------->                        +---------------------->                          |   costCombosList      |                         |
//             |         | generateSkillsCostList |        maxTP (10)    |  generateCostCombosList  +----------------------->  generateCombosList     |
//             |  +------>                        |          +----------->                          |                       |                         |
//    chips +--+  |      +------------------------+                      +--------------------------+                       |     +-----------+       |
//             |  |                                                                                                         |     |           |       |    combosList
//  weapons +-----+                                   [3 : [37, 21], 4 : [1037, 20], 5 : [7]]                               |     | fillCombo |       +-----------+
//             |  |      +------------------------+                                                                         |     |           |       |           |
//             +--------->                        |   skillSortedByCosts                                                    |     +-----------+       |           |
//                |      |    sortSkillsByCost    +------------------------------------------------------------------------->                         |           |
//                +------>                        |                                                                         |                         |           |
//                       +------------------------+                                                                         +-------------------------+           |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//     [[7], [7, 1037], [7, 20], [7, 37], [7, 21],         [[7], [7, 1037], [7, 20], [7, 21], [1037, 20],       [[7], [7, 1037], [20, 7], [21, 7], [20, 1037],    |
//     [1037, 1037], [1037, 20], [20], [1037, 37, 37],     [20], [1037, 37, 37], [1037, 37, 21], [1037, 21],    [20], [1037, 37, 37], [21, 1037, 37], [21, 1037], |
//     [1037, 37, 21], [1037, 21], [20, 37, 37],           [20, 21],  [21]]                                     [20, 21], [21]]                                   |
//     [20, 37, 21], [20, 21], [37, 37, 37],                                                                                                                      |
//     [37, 37, 21], [37, 21], [21]]                                                                                                                              |
//                                                                                                                                                                |
//                +-----------------------------------------------------------------------------------------------------------------------------------------------+
//                |
//                |
//                |      +------------------------+                      +--------------------------+                      +-----------------------------+
//                |      |                        |                      |                          |   sortedCombosList   |                             |
//                |      |                        |                      |                          +----------------------+   calculateCombosScore      |
//                |      |      filterCombos      |                      |        sortCombos        |                      |                             |
//                |      |                        |  filteredCombosList  |                          |          skills      | +-------------------------+ |
//                +------>  +------------------+  +---------------------->      +------------+      |               +------> |                         | |  comboScores
//                       |  | filterCombo      |  |                      |      |            |      |                      | |  calculateComboScore    | +--------+
//                       |  |   * weaponFilter |  |                      |      | sortCombo  |      |    ourLeekCarac      | |                         | |        |
//                       |  |   * ...          |  |                      |      |            |      |               +------> | * damage_score_function | |        |
//                       |  |                  |  |                      |      +------------+      |                      | | * default_score_function| |        |
//                       |  +------------------+  |                      |                          |  enemyLeekCarac      | | * buff_score_function   | |        |
//                       |                        |                      |                          |               +------> | * ...                   | |        |
//                       +------------------------+                      +--------------------------+                      | +-------------------------+ |        |
//                                                                                                                         +-----------------------------+        |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//     [[30.5, 0], [30.5, 1], [30.5, 2], [30.5, 3],        [[35.0, 6], [30.5, 0], [30.5, 1], [30.5, 2],                                                           |
//     [0, 4], [0, 5], [35.0, 6], [17.5, 7], [0, 8],       [30.5, 3], [17.5, 7], [0, 4], [0, 5], [0, 8],                                                          |
//     [0, 9], [0, 10]]                                    [0, 9], [0, 10]]                                                                                       |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                +-----------------------------------------------------------------------------------------------------------------------------------------------+
//                |
//                |
//                |      +------------------------+                     +--------------------------+                   +---------------------------------+
//                |      |                        |   sortedComboScores |                          |  allTrajectories  |                                 |   allTrajectories
//                +------>  sortCombosByScore     +--------------------->  generate_trajectories   +------------------->  calculate_trajectories_score   +--------+
//                       |                        |                     |                          |                   |                                 |        |
//                       +------------------------+     enemySkills     |                          |     ourLeekCarac  |                                 |        |
//                                                                +----->                          |            +------>                                 |        |
//                                                                      |                          |                   |                                 |        |
//                                                          enemyID     |                          |   enemyLeekCarac  |                                 |        |
//                                                                +----->                                       +------+                                 |        |
//                                                                      |                          |                   |                                 |        |
//                                                              map     |                          |        dangerMap  |                                 |        |
//                                                                +----->                          |            +------>                                 |        |
//                                                                      +--------------------------+                   +---------------------------------+        |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                                                                                                                                                                |
//                +-----------------------------------------------------------------------------------------------------------------------------------------------+
//                |
//                |
//                |                  +---------------------------------+                           +-------------------------+
//                |                  |                                 |    bestTrajectoryKey      |                         |  actionSequence
//                +------------------>    find_best_trajectory_score   +--------------------------->   fill_action_sequence  +------->
//                                   |                                 |                           |                         |
//                                   +---------------------------------+                           +-------------------------+
//
//
//
//
//

	// displays leek skills (for debug purpose)
	var leekSkills = [];
	pushAll(leekSkills, getChips());
	pushAll(leekSkills, getWeapons());
	debug("Our Leek");
	for (var skill in leekSkills){
		if (isWeapon(skill))
			debug("ID: " + skill + ", " + getSkillName(skill) + ", cost: " + getWeaponCost(skill));
		else{
			if (getCooldown(skill) == 0)
				debug("ID: " + skill + ", " + getSkillName(skill) + ", cost: " + getChipCost(skill));
		}
	}
	debug("");
	debug("Enemy Leek");
	leekSkills = [];
	pushAll(leekSkills, getChips(enemyID));
	pushAll(leekSkills, getWeapons(enemyID));
	for (var skill in leekSkills){
		if (isWeapon(skill))
			debug("ID: " + skill + ", " + getSkillName(skill) + ", cost: " + getWeaponCost(skill));
		else{
			if (getCooldown(skill, enemyID) == 0)
				debug("ID: " + skill + ", " + getSkillName(skill) + ", cost: " + getChipCost(skill));
		}
	}
	debug("");

	// Calcul des combos
	var maxTP = getTP();

	var nbOp = getOperations();
	skillsCostList = generateSkillsCostList();
	//debug("skillsCostList: " + skillsCostList);
	debug("nb instruct generateSkillsCostList : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	generateCostCombosList(skillsCostList, maxTP, []);
	//debug("costCombosList: " + costCombosList);
	debug("nb instruct generateCostCombosList : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	sortSkillsByCost();
	//debug("skillSortedByCosts: " + skillSortedByCosts);
	debug("nb instruct sortSkillsByCost : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	generateCombosList();
	//debug("combosList" + combosList);
	debug("nb instruct generateCombosList : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	filterCombos();
	//debug("filteredCombosList: " + filteredCombosList);
	debug("nb instruct filterCombos : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	sortCombos();
	//debug("sortedCombosList: " + sortedCombosList);
	debug("nb instruct sortCombos : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	calculateCombosScore();
	//debug("comboScores: " + comboScores);
	debug("nb instruct calculateCombosScore : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	sortCombosByScore();

	//debug("sortedComboScores: " + sortedComboScores);
	debug("nb instruct sortCombosByScore : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	generate_trajectories();
	//debug("all trajectories without score: " + allTrajectories);
	debug("nb instruct generate_trajectories : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	calculate_trajectories_score();
	debug("nb instruct calculate_trajectories_score : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	find_best_trajectory_score();
	debug("nb instruct find_best_trajectory_score : " + prettyPrintNb(getOperations() - nbOp));

	nbOp = getOperations();
	fill_action_sequence();
	debug("nb instruct fill_action_sequence : " + prettyPrintNb(getOperations() - nbOp));
	debug("");
	debugC("remaining operation: " + prettyPrintNb(OPERATIONS_LIMIT - getOperations()), getColor(106, 68, 181));

	debug("******************************");
	debugC("[STRAT] total unfiltered combos: " + count(combosList), getColor(81, 144, 34));
	debugC("[STRAT] total combos : " + count(filteredCombosList), getColor(81, 144, 34));
	debugC("[STRAT] number of combos used to calculate the trajectories: " + (nbComboUsed - 1) + " / " + count(filteredCombosList), getColor(81, 144, 34));
	//debugC("[STRAT] Best combo : " + filteredCombosList[sortedComboScores[0][KEY]], getColor(81, 144, 34));
	//debugC("[STRAT] second best combo : " + filteredCombosList[sortedComboScores[1][KEY]], getColor(81, 144, 34));
	debugC("[STRAT] total trajectories : " + count(allTrajectories), getColor(81, 144, 34));
	//debugC("[STRAT] all trajectories with score: " + allTrajectories, getColor(81, 144, 34));
	debugC("[STRAT] best trajectory key: " + bestTrajectoryKey, getColor(81, 144, 34));
	debugC("[STRAT] best trajectory: " + allTrajectories[bestTrajectoryKey], getColor(81, 144, 34));

	var TPUsed = 0;
	for (var skill in allTrajectories[bestTrajectoryKey][SKILL]){
		if (isWeapon(skill%1000))
			TPUsed += getWeaponCost(skill%1000);
		else if (isChip(skill))
			TPUsed += getChipCost(skill);
	}
	debugC("[STRAT] best trajectory total TP: " + TPUsed + " / " + getTotalTP(), getColor(81, 144, 34));

	//debugC("[STRAT] Action Map: " + actionMap, getColor(81, 144, 34));
	//debug("");
	//debugC("[STRAT] Action nodes: " + actionNodes, getColor(81, 144, 34));

}
