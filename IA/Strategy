include("GlobalVar");
include("util_can_use");
include("util_misc");
include("util_combos");
include("FonctionEtat");

function leekStrategyChoice(){

	
	if (getTurn() == 1){
		first_turn_strategy();
	}
	else {
		fight_strategy();
	}
	//complete_strategy();
}

